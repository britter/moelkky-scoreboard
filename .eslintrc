{
  "plugins": [ "angular" ],
  "env": {
    "es6": true,
    "browser": true
  },
  "ecmaFeatures" : {
    "modules": true
  },
  "rules": {
    "brace-style": [2, "1tbs", { "allowSingleLine": false } ],
    "complexity": [2, 10],
    "strict": [2, "never"],
    "max-len": [2, 120, 4],
    "no-use-before-define": [2, "nofunc"],
    "quotes": [2, "single", "avoid-escape"],
    "no-var": 2,
    "yoda": 0,
    "no-console": 1,
    "curly": [2, "multi-line"],
    "new-cap": 0,

    // angular rules
    "angular/module-getter" : 0
  }
}